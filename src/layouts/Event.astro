---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Nav from "../components/navigation/Nav.astro";
import PageTitle from "../components/PageTitle.astro";

type Props = CollectionEntry<"events">["data"];

const { title, date } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={""} />
  </head>

  <body>
    <Nav />

    <!-- <main class="mx-auto max-w-screen-lg"> -->
    <main class="max-w-screen-lg mx-3 md:mx-6 lg:mx-12 xl:mx-auto">
      <div class="py-12">
        <FormattedDate date={date} />
        <PageTitle>{title}</PageTitle>
      </div>
      <div class="prose md:prose-xl lg:prose-2xl">
        <slot />
      </div>
    </main>

    <Footer />
  </body>
</html>
