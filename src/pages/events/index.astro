---
import Page from '../../layouts/Page.astro';
import FormattedDate from "../../components/FormattedDate.astro";

import { getCollection } from "astro:content";

const events = (await getCollection("events")).sort(
    (a, b) => a.data.date.valueOf() - b.data.date.valueOf()
  ).reverse();
---

<Page>
  <main>
    <section event-list>
      <ul class="list-none">
        {
          events.map((post) => (
            <li class="mb-10 group/item">
              <a href={`/events/${post.slug}/`}>
                <FormattedDate classAtt="text-base text-gray-400" date={post.data.date} />
                <h3 class="text-accent text-2xl font-semibold">{post.data.title}</h3>
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </main>
</Page>
